<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- base -->

    <style name="BaseTxtv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <!-- toolbar -->

    <style name="ToolbarText" parent="BaseTxtv">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">@color/black_six</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- search view -->

    <style name="SearchViewTextStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_four</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/search_view_text_size</item>
        <item name="android:queryBackground">@null</item>
        <item name="android:searchHintIcon">@null</item>
    </style>

    <style name="SearchViewIconStyle">
        <item name="android:searchIcon">@drawable/ic_search_white_18dp</item>
        <item name="android:closeIcon">@drawable/ic_close_white_18dp</item>
    </style>

    <style name="SearchViewStyle" parent="SearchViewIconStyle">
    </style>

    <!-- vh item -->

    <style name="VhItemTxtv" parent="BaseTxtv">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="VhItemTitle" parent="VhItemTxtv">
        <item name="android:maxLines">3</item>
        <item name="android:textSize">@dimen/vh_item_title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="VhItemTitleLarge" parent="VhItemTitle">
        <item name="android:maxLines">3</item>
        <item name="android:textSize">@dimen/vh_item_title_text_size_large</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="VhItemMeta" parent="VhItemTxtv">
        <item name="android:textSize">@dimen/vh_item_meta_text_size</item>
        <item name="android:layout_marginStart">@dimen/vh_item_meta_txt_margin_start</item>
    </style>

    <style name="VhItemLabel" parent="VhItemTxtv">
        <item name="android:textSize">@dimen/vh_item_label_text_size</item>
        <item name="android:textColor">@color/yellow_one</item>
    </style>

</resources>